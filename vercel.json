{
  "version": 2,
  "buildCommand": "npm run build && npm run build:server",
  "outputDirectory": "dist/public",
  "devCommand": "npm run dev:full",
  "builds": [
    {
      "src": "dist/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "dist/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "dist/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "dist/server.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
